<div class="panel panel-default">
	<div class="panel-heading">
		<h2><%=t('.informacion_controlador')%></h2>
	</div>
	<div class="panel-body panel-no-padding">

		<div class="table-responsive">
			<table class="table">
				<thead>

					<th><%= t('.name') %></th>
					<th><%=t('.description') %></th>
					<th><%= t('.model') %></th>
				</thead>
				<tbody>
					<tr>
						<td><%= @board.name %></td>
						<td><%= @board.description %></td>
						<td>
							<%= @board.model %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<%= link_to t('.destroy'), @board, method: :delete, :class => "fa fa-times-circle" %>

<%= link_to t('.edit'), edit_building_path(@board), :class => "fa fa-pencil-square-o" %>

<%= link_to t('.back'), boards_path, :class => "fa fa-mail-reply" %>
