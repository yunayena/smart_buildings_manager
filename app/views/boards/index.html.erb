<p id="notice"><%= notice %></p>

<h1><%= t('.listing_boards') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.description') %></th>
      <th><%= t('.model') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.description %></td>
        <td><%= board.model %></td>
        <td><%= link_to t('.show'), board %></td>
        <td><%= link_to t('.edit'), edit_board_path(board) %></td>
        <td><%= link_to t('.destroy'), board, method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_board'), new_board_path %>
