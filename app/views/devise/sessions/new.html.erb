<body class="focused-form" style="">

    <div class="container" id="login-form">
        <center>
            <div class="login-logo"><%= image_tag("logo-inicio.png") %></div>
        </center>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2>Login Form</h2>
                    </div>
                    <div class="panel-body">

                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' } ) do |f| %>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <%= f.email_field :email, class: "form-control", placeholder: "Email Username", autofocus: true %>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-key"></i>
                                    </span>
                                    <%= f.password_field :password, class:"form-control", placeholder: "Password", autocomplete: "off" %>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <%= link_to 'Forgot password?',new_password_path(resource_name), class: 'pull-left' %>
                                <% if devise_mapping.rememberable? -%>
                                <div class='pull-right'>
                                    <%= f.check_box :remember_me %>
                                    <%= f.label :remember_me %>
                                </div>
                                <% end -%>
                            </div>
                        </div>

                        <div class="panel-footer">
                            <div class="clearfix">
                                <%= link_to 'Register', new_user_registration_path, class: 'btn btn-default pull-left' %>
                                <%= f.submit 'Log in', class: 'btn btn-primary pull-right' %>
                            </div>
                        </div>

                        <% end %>
                    </div>
                </div>

            </div>
        </div>
    </div>
<%= render "devise/shared/links" %>
    <ul class="vakata-context"></ul>
    <div id="jstree-marker" style="display: none;">&nbsp;</div>
</body>
