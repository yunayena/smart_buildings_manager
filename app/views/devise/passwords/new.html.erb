<body class="focused-form" style="">

    <div class="container" id="login-form">
        <center>
            <div class="login-logo"><%= image_tag("logo-inicio.png") %></div>
        </center>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                      <h2><%= t('.forgot_your_password') %></h2>
                    </div>
                    <div class="panel-body">

                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal', method: :post }) do |f| %>
                        <%= devise_error_messages! %>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <%= f.email_field :email, class: "form-control", placeholder: t('.email_user'), autofocus: true %>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <%= f.email_field :email, class: "form-control", placeholder: t('.repite_email_user'), autofocus: true %>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="clearfix">
                                <%= f.submit t('.send_me_reset_password_instructions') %>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <ul class="vakata-context"></ul>
    <div id="jstree-marker" style="display: none;">&nbsp;</div>
</body>
