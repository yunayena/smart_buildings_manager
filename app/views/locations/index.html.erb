<p id="notice"><%= t('.notice') %></p>

<h1><%= t('.Listing_Locations') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.description') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.description %></td>
        <td><%= link_to t('.show'), location %></td>
        <td><%= link_to t('.edit'), edit_location_path(location) %></td>
        <td><%= link_to t('.destroy'), location, method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

