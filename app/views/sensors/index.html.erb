<p id="notice"><%= t('.notice') %></p>

<h1><%= t('.listing_sensors') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.description') %></th>
      <th><%= t('.kind') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensors.each do |sensor| %>
      <tr>
        <td><%= sensor.name %></td>
        <td><%= sensor.description %></td>
        <td><%= sensor.kind %></td>
        <td><%= link_to t('.show'), sensor %></td>
        <td><%= link_to t('.edit'), edit_sensor_path(sensor) %></td>
        <td><%= link_to t('.destroy'), sensor, method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_sensor'), new_sensor_path %>
