            <%= t('.informacion_sensor')%>
        </h2>
    </div>
    <div class="panel-body panel-no-padding">

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr role="row">
                        <th><%= t('.building')%></th>
                        <th><%= t('.location')%></th>
                        <th><%= t('.board')%></th>
                        <th><%= t('.name') %></th>
                        <th><%= t('.description') %></th>
                        <th><%= t('.kind') %></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                      <td> <%= @sensor.board_id %>
                      </td>
                      <td> <%= @sensor.board_id %>
                      </td>
                        <td> <%= @sensor.board_id %>
                        </td>
                        <td>
                            <%= @sensor.name %>
                        </td>
                        <td>
                            <%= @sensor.description %>
                        </td>
                        <td>
                            <%= @sensor.kind %></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--end table-->
    </div>
</div>

<!--Grafica -->
<% unless @sensor_measures.blank? %>
  <div>
    <div class="panel panel-default">
      <div class="panel-heading">
        Sensor Evolution
      </div>
      <div class="panel-body">
        <div id="sensor-evolution" style="height: 250px;"></div>
      </div>
    </div>
  </div>

  <% content_for(:extra_scripts) do %>
    <script type="text/javascript">
      $(document).ready(function (){
        new Morris.Area({
          element: 'sensor-evolution',
          data: <%= raw @sensor_measures.to_json %>,
          xkey: 'time',
          ykeys: ['value'],
          labels: ['Value'],
          pointSize: 2,
          resize: true
        });
      });
    </script>
  <% end %>
<% end %>
<!--PIE-->

<%= link_to t('.destroy'), @sensor, method: :delete, :class => "btn btn-danger-alt" %>

<%= link_to t('.edit'), @sensor, method: :edit, :class => "btn btn-warning-alt" %>

