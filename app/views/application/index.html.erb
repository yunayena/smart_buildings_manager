<center><h2><%= t('.title') %></h2></center>
<div class="container-fluid">

    <div data-widget-group="group1" class="ui-sortable">
        <div class="row">
            <div class="col-md-3">
                <a href="/buildings" class="info-tile tile-midnightblue">
                    <div class="tile-heading">
                        <div class="pull-left"><%= t('.sus_edificios') %></div>
                    </div>
                    <div class="tile-body">
                        <div class="pull-left">
                            <i class="fa fa-building"></i>
                        </div>
                        <div class="pull-right">
                            <span class="badge"><%= @building_count %></span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a href="/locations" class="info-tile tile-midnightblue">
                    <div class="tile-heading">
                        <div class="pull-left"><%= t(".sus_localizaciones") %></div>
                    </div>
                    <div class="tile-body">
                        <div class="pull-left">
                            <i class="fa fa-map-marker"></i>
                        </div>
                        <div class="pull-right">
                            <span class="badge"><%= @location_count %></span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a href="/boards" class="info-tile tile-midnightblue">
                    <div class="tile-heading">
                        <div class="pull-left"><%= t('.sus_controladores') %></div>
                    </div>
                    <div class="tile-body">
                        <div class="pull-left">
                            <i class="fa fa-cogs"></i>
                        </div>
                        <div class="pull-right">
                            <span class="badge"><%= @board_count %></span>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a href="/sensors" class="info-tile tile-midnightblue">
                    <div class="tile-heading">
                        <div class="pull-left"><%= t(".sus_sensores") %></div>
                    </div>
                    <div class="tile-body">
                        <div class="pull-left">
                            <i class="fa fa-dot-circle-o"></i>
                        </div>
                        <div class="pull-right">
                            <span class="badge"><%= @sensor_count %></span>
                        </div>
                    </div>
                </a>
            </div>
        </div>

    </div>
</div>

<div class="container-fluid">
<div class="btn-group btn-block">
    <button type="button" class="btn btn-block btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-cog"></i> &nbsp; <%= t('.language') %>
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu col-xs-12" role="menu">
        <li><%= link_to t('.change_locale_en'), set_locale_path({ locale: :en }), class: 'link-locale' %></li>
        <li><%= link_to t('.change_locale_es'), set_locale_path({ locale: :es }), class: 'link-locale' %></li>
    </ul>
</div>
</div>
